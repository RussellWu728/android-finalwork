<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="当前默认城市："
            android:textSize="20dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/tv_changedefaultcity_ori_defaultcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="当前定位城市："
            android:textSize="20dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/tv_changedefaultcity_nowcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="新默认城市："
            android:textSize="20dp"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/et_changedefaultcity_new_defaultcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:hint="请输入城市名"
            android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_changedefaultcity_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认修改"
        android:textSize="30dp"/>

</LinearLayout>